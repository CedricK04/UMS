{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "UMS_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "debug-valgrind",
            "displayName": "Debug with Valgrind",
            "inherits": "debug",
            "cacheVariables": {
                "UMS_ENABLE_VALGRIND": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "UMS_BUILD_TESTS": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "debug-valgrind",
            "configurePreset": "debug-valgrind"
        },
        {
            "name": "release",
            "configurePreset": "release"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "valgrind",
            "configurePreset": "debug-valgrind",
            "filter": {
                "include": {
                    "label": "valgrind"
                }
            }
        }
    ]
}